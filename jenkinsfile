@Library('utils') _

import de.check24.energy.Slack

pipeline {
    agent any
    stages {

        stage('Checkout') {
            steps {
                    checkout([$class: 'GitSCM',
                              branches: [[name: 'main']],
                              doGenerateSubmoduleConfigurations: false,
                              extensions: [],
                              submoduleCfg: [],
                              userRemoteConfigs: [[url: 'https://github.com/osamasc/release-pipline']]])
                }
        }

        stage('Hello') {
            steps {
                echo 'Hello, World!'
                git branch: 'main', url: 'https://github.com/osamasc/release-pipline'
                script {
                    slack.sendReleaseMessage("123")
                }

            }
        }
    }
}
